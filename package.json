{
    "name": "electron-vite-react-template",
    "private": true,
    "version": "0.0.0-alpha.1+custom-extra-name",
    "description": "Base Electron + Vite + React template with tRPC IPC, TanStack Router/Query/Form/Virtual, and TailwindCSS",
    "author": "",
    "type": "module",
    "main": "dist-electron/main.js",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "build:win": "vite build && electron-builder --win -c electron-builder.json5",
        "build:mac": "vite build && electron-builder --mac -c electron-builder.json5",
        "build:linux": "vite build && electron-builder --linux -c electron-builder.json5",
        "publish:generic": "tsx scripts/publish.ts",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check ."
    },
    "dependencies": {
        "@tanstack/react-form": "^1.26.0",
        "@tanstack/react-query": "^5.90.10",
        "@tanstack/react-router": "^1.139.3",
        "@tanstack/react-virtual": "^3.13.12",
        "@trpc/client": "^11.7.2",
        "@trpc/react-query": "^11.7.2",
        "@trpc/server": "^11.7.2",
        "electron-trpc-experimental": "1.0.0-alpha.1",
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "react-icons": "^5.5.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/vite": "^4.1.17",
        "@tanstack/react-query-devtools": "^5.91.1",
        "@tanstack/react-router-devtools": "^1.139.3",
        "@tanstack/router-plugin": "^1.139.3",
        "@types/node": "^24.10.1",
        "@types/react": "^19.2.7",
        "@types/react-dom": "^19.2.3",
        "@vitejs/plugin-react": "^5.1.1",
        "babel-plugin-react-compiler": "^1.0.0",
        "dotenv": "^17.2.3",
        "electron": "^39.2.3",
        "electron-builder": "^26.0.12",
        "electron-updater": "^6.6.2",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-jsx-a11y": "^6.10.2",
        "eslint-plugin-no-secrets": "^2.2.1",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^7.0.1",
        "eslint-plugin-react-refresh": "^0.4.24",
        "globals": "^16.5.0",
        "prettier": "^3.6.2",
        "prettier-plugin-tailwindcss": "^0.7.1",
        "tailwind-clamp": "^4.1.0",
        "tailwindcss": "^4.1.17",
        "tsx": "^4.20.6",
        "typescript": "~5.9.3",
        "typescript-eslint": "^8.48.0",
        "vite": "^7.2.4",
        "vite-plugin-electron": "^0.29.0"
    }
}
