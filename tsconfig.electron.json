{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": ["ESNext"],
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "verbatimModuleSyntax": true,
        "moduleDetection": "force",
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "@app/*": ["electron/*"],
            "@web/*": ["src/*"]
        }
    },
    "include": ["electron", "vite.config.ts"]
}
